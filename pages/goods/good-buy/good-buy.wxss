.address-container{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
}
.buy-top-container{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
    --good-img-width:160rpx;
}
.stepper-container{
    width: calc(630rpx - var(--good-img-width));
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    height: var(--good-img-width) ;
}
.good-image{
    width: var(--good-img-width);
    height: var(--good-img-width);
    border-radius: 20rpx;
    margin-right: 40rpx;
}
.text-html {
    white-space: nowrap; /* 文本不换行 */
    overflow: hidden; /* 超出部分隐藏 */
    text-overflow: ellipsis;
    flex:1;
    margin-right: 20rpx;
}
.buy-bottom-container{
    background-color: white;
    box-sizing: border-box;
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--bigger-font-size);
    font-weight: 600;

    margin-bottom: env(safe-area-inset-bottom);
}