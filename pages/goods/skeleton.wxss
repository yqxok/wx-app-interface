.skeleton-container{
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 20rpx;
    width: 100%;
    height: 100vh;
    /* background-color: pink; */
    --background-color:rgb(245, 245, 245);
    --skeleton-height:40rpx
}
.skeleton-item1{
    width: 345rpx;
    height: 100%;
    /* background-color: pink; */
}
.skeleton-card{
    width: 100%;
    border-radius:20rpx ;
    overflow: hidden;
    margin-bottom: 20rpx;

}
.skeleton-image{
    width: 100%;
    background-color: var(--background-color);
    margin-bottom: 10rpx;
    border-radius: 20rpx;
}
.skeleton-text{
    height: var(--skeleton-height);
    width: 100%;
    background-color: var(--background-color);
    border-radius: 20rpx;
    margin-bottom: 10rpx;
}
.skeleton-price{
    width: 70%;
    height: var(--skeleton-height);
    background-color: var(--background-color);
    border-radius: 20rpx;
    margin-bottom: 10rpx;
}
.skeleton-profile-img{
    width: var(--skeleton-height);
    height: var(--skeleton-height);
    background-color: var(--background-color);
    border-radius: calc(var(--skeleton-height)/2);
    margin-right: 20rpx;
}
.skeleton-name{
    width: 25%;
    height: var(--skeleton-height);
    background-color: var(--background-color);
    border-radius: 20rpx;
    /* margin-bottom: 10rpx; */
}