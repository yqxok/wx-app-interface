.msg-tip{
    --tip-width:30rpx;
    --padding-tip:3rpx;
    position: absolute;
    top: 0;
    right: 20rpx;
    font-size: 24rpx;
    line-height: var(--tip-width);
    padding:var(--padding-tip);
    min-width: var(--tip-width);
    min-height: var(--tip-width);
    text-align: center;
    border-radius: calc((var(--tip-width) + var(--padding-tip))/2);
    background-color: red;
    color:white;
}