/* pages/message/msg-comment/msg-comment.wxss */
.msg-cm-container{
    display: flex;
    box-sizing: border-box;
    padding: 20rpx;
    background-color: white;
    font-size: var(--normal-font-size);
    --user-img-w:100rpx;
    --good-img-w:120rpx;
}
.user-img{
    width: var(--user-img-w);
    height: var(--user-img-w);
    border-radius: 50%;
    margin-right: 20rpx;
}
.good-img{
    width: var(--good-img-w);
    height: var(--good-img-w);
    border-radius: 20rpx;
}
.split-border{
    border-bottom: 1px solid rgb(231, 231, 231);
    margin-left: 20rpx;
}