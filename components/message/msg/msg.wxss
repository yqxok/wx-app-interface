/* components/message/msg/msg.wxss */
.msg-container{
  display: flex;
  box-sizing: border-box;
  padding: 10rpx;
  align-items: flex-start;
}
.msg-user-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 20rpx;

}
.msg-good-img{
  height: 135rpx;
  width: 135rpx;
  border-radius: 20rpx;
  margin: 20rpx;
}
.msg{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 20rpx;
}
.msg-bottom{
  text-align:center; color: rgb(202, 202, 202);
}
