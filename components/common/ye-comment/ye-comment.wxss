/* components/common/comment/comment.wxss */
.comment-item{
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 20rpx 0;
    align-items: flex-start;
    font-size: var(--normal-font-size);
    line-height: 1.5;
}
.comment-item-box{
    display: flex;
    justify-content:flex-start;
}

.comment-img{
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    margin-right: 20rpx;
}
.comment-name-content{
    flex:1;
    display: flex;
    flex-direction: column;
}
.good-job{
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.check-all-comment{
    text-align: center; 
    color: rgb(190, 190, 190);
    font-size:smaller;
    box-sizing: border-box;
    padding: 0 20rpx;
}
/* 评论模块 */
.fake-comment-container{
    display: flex;
    margin: 40rpx 0;
    align-items: center;
}
.fake-comment-input{
    flex: 1;
    background-color: rgb(243, 242, 242);
    color: rgb(192, 192, 192);
    box-sizing: border-box;
    padding: 10rpx 20rpx;
    border-radius: 40rpx;
    
}

